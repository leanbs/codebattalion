<div class = "container">
	<h3 class = "text-center">Leaderboard</h3>
	<div class = "row">
		<div class="table-responsive">
		  <table class="table">
		  	<tr>
		  		<th>Rank</th>
		  		<th>Username</th>
		  		<th>Rating</th>
		  	</tr>
		  	<% @hackers.each do |a| %>
		  	<tr>
		  		<td><%= @count+=1%></td>
		  		<td><a href="../profile/<%= a.username%>"><%= a.username%></a></td>
		  		<td><%= a.rating%></td>
		  	</tr>
		  	<% end %>
		  </table>
		</div>
	</div>
</div>
