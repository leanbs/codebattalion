<% content_for :title, "Login" %>
      <div class="login-sx row">
          <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-danger" %>
  <% end %>
          <%= form_for :login, url: {action: "create"}, html: {class: "signin"} do |f| %>
          <h1 align = "center">CODEBATTALION</h1>
            <div class="col-lg-4"></div>
          <div class="login-form col-lg-4">
            <div class="form-group">
              <div class = "text-center">
                <div class="btn-group btn-group-lg" role="group" aria-label="...">
                  <a type="button" class="btn btn-default active">Log in</a>
                  <a type="button" class="btn btn-primary" href = "../signup">Sign up</a>
                </div>
              </div>
            </div>
            <div class="form-group">
                <%= f.text_field :usemail , placeholder:"Username or Email", class:"form-control login-field", :required => true%>
                <label class="login-field-icon fui-user" for="login-name"></label>
            </div>

            <div class="form-group">
              <%= f.password_field :password, placeholder:"Password", class:"form-control login-field", :required => true %>
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>
            <div id = "emptyField"></div>
            <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
            <a class="login-link" href="#">Lost your password?</a>
          </div>
          <div class="col-lg-4"></div>
         <% end %>
      </div>
      