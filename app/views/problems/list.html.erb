<div class = "container">
	<h3 class = "text-center">Problems created by <%= current_user.username%></h3>
	<div class = "row">
		<div class="table-responsive">
		  <table class="table">
		  	<tr>
		  		<th>Problem name</th>
		  		<th>Bundle</th>
		  		<th>Points</th>
		  		<th>Options</th>
		  	</tr>
		  	<% @problems_created.each do |a| %>
		  	<tr>
		  	    <td><%= a.ProblemName %></td>
		  	    <td><%= Bundle.find_by(ID_BUNDLE_KEY: a.ID_BUNDLE_FKEY).BundleName %></td>
		  	    <td><%= a.Points %></td>
		  	    <td><a class="btn btn-primary btn-large" href="../edit/<%= a.id%>">Edit</a></td>
		  	</tr>
		  	<% end %>
		  </table>
		</div>
	</div>
</div>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
