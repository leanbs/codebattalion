<% content_for :title, "Problems" %>
<nav class="navbar navbar-static-top" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="../" class="navbar-brand">Codebattalion</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
          	<% if logged_in? %>
          		<a href="../profile/<%= current_user.username %>" class="navbar-brand" style="float:right"><%= current_user.username %></a>
          	<% end %>
	        <ul class="nav navbar-nav">
	        <li>
	          <a href="../problems">Problems</a>
	        </li>
	        <li>
	          <a href="../leaderboard">Leaderboard</a>
	        </li>
          <% if logged_in? %>
          <li>
	          <a href="../submissions/<%= current_user.id%>">Submissions</a>
	        </li>
	        <li>
	          <a href="../logout">Logout</a>
	        </li>
          <% end %>
	      </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
<div class = "container">
	<h3 class = "text-center">Submission Result</h3>
	<div class="row">
        <div class="panel panel-default">
          <div class="panel-body">
              <% if @submissionsave.Verdict == "ACC" %>
              Verdict: Accepted <span class="glyphicon glyphicon-ok" style="color:#468847"></span>
              <% elsif @submissionsave.Verdict == "WA"%>
              Verdict: Wrong Answer <span class="glyphicon glyphicon-remove" style="color:#d9534f"></span>
              <% elsif @submissionsave.Verdict == "TLE"%>
              Verdict: Time Limit Exceeded <span class="glyphicon glyphicon-time" style="color:#4285f4"></span>
              <% elsif @submissionsave.Verdict == "ERR"%>
              Verdict: Compilation Error <span class="glyphicon glyphicon-warning-sign" style="color:#fdc424"></span><br/>
              <% @error_codes.each do |x|%>
              <%= x %><br/> 
              <% end %>
              <% end %>
          </div>
        </div>
	</div>
</div>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
